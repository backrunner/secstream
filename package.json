{
  "name": "secstream",
  "type": "module",
  "version": "0.2.1",
  "packageManager": "pnpm@10.19.0",
  "description": "Secure audio streaming library with client/server components",
  "author": "BackRunner",
  "license": "MIT",
  "exports": {
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "default": "./dist/server/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js",
      "default": "./dist/client/index.js"
    },
    "./client/worker": {
      "import": "./dist/client/decryption-worker.js",
      "default": "./dist/client/decryption-worker.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "npm run build && pnpm --filter secstream-demo dev",
    "dev:test": "vitest",
    "build": "rimraf ./dist && rollup -c",
    "build:demo": "pnpm --filter secstream-demo build",
    "test": "vitest run",
    "lint": "eslint ./src/**/*",
    "lint:fix": "eslint ./src/**/* --fix"
  },
  "dependencies": {
    "@wasm-audio-decoders/flac": "^0.2.10",
    "@wasm-audio-decoders/ogg-vorbis": "^0.1.20",
    "fflate": "^0.8.2",
    "mpg123-decoder": "^1.0.3",
    "nanoid": "^5.1.6"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.19.0",
    "@rollup/plugin-commonjs": "^28.0.9",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^24.9.1",
    "@types/web": "^0.0.166",
    "eslint": "^9.38.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.52.5",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-filesize": "^10.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  }
}
