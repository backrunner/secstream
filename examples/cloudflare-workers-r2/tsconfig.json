{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "WebWorker"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "preserveWatchOutput": true,
    "types": ["@cloudflare/workers-types"]
  },
  "include": ["*.ts", "*.js"],
  "exclude": ["node_modules", "dist"]
}